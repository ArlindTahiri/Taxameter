@inherits LayoutComponentBase

<!-- Bootstrap Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container justify-content-center">
        <span class="navbar-brand mb-0 h1 text-center">
            TTTT | Tahiris Tesla Taxi Taximeter
        </span>
    </div>
</nav>

<!-- Main Content -->
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col">
            @Body
        </div>
    </div>
</div>

<!-- Error UI -->
<div id="blazor-error-ui" class="alert alert-danger fixed-bottom m-3 d-none">
    An unhandled error has occurred.
    <a href="." class="alert-link">Reload</a>
    <span class="ms-3" onclick="document.getElementById('blazor-error-ui').classList.add('d-none')" style="cursor: pointer;">&times;</span>
</div>
